{% extends 'base.html.twig' %}

{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>Site Village Green</h1>
            <p>Bienvenue dans notre boutique</p>
        </div>

        {% for category in categories %}
            {% if category.parent == null %}
                <div class="col-12">
                    <h2>{{ category.nom }}</h2>
                </div>
            {% else %}
                <div class="col-md-4 mb-3">
                    <div class="card" style="width: 100%;">
                        <img class="card-img-top" src="{{ asset('uploads/Categories_images/' ~ category.photo) }}" alt="{{ category.nom }}" style="width:100%">
                        <div class="card-body">
                            <h3 class="card-title">{{ category.nom }}</h3>
                            <a href=" {{ path('categories_list', {slug: category.slug}) }}" class="btn btn-primary">Voir Les produits</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </section>
</main>
{% endblock %}
