{% extends 'base.html.twig' %}

{% block title %}
    List des produits de la catégories {{ category.nom }}
    
{% endblock %}

{% block body %}
<main class="container">
    <section class="row">
        <div class="col-12">
            <h1>List des produits de la catégories {{ category.nom }} </h1>
        </div>
        {% for product in products %}
            <div class="col-3 mb-3">
                <article class="card h-100">
                    <div class="card-body">
                        <h2 class="card-title">{{ product.nom }}</h2>
                        <img class="card-img-top" src="{{ asset('uploads/Products_images/' ~ product.photo) }}" alt="{{ category.nom }}" style="width:100%">
                        <p class="card-text"> {{ product.description }} </p>
                        <a href="{{ path('products_details', {'slug': product.slug  })}}" class="btn btn-primary"> Voir les details</a>
                    </div>
                </article>
            </div>
            
        {% endfor %}
    </section>
</main>

{% endblock %}